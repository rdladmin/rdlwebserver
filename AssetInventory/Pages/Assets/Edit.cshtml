@page
@model AssetInventory.Pages.Assets.EditModel
@{
}

<br>
<h2>Edit Asset</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss='alert' aria-label="Close"></button>
    </div>
}
<form method="POST">
    <input type="hidden" name="id" value="@Model.asset.id">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Device Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Device_name" value="@Model.asset.Device_name">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Device IP</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Device_IP" value="@Model.asset.Device_IP">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Location</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Location" value="@Model.asset.Location">
        </div>
    </div>

    @if (Model.SuccessMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.SuccessMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss='alert' aria-label="Close"></button>
                </div>
            </div>
        </div>

    }
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid ">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>
